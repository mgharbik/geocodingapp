<div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow-md">
  <h2 class="text-2xl font-bold text-gray-800 text-center mb-6">Login</h2>

  <%= form_with scope: :user, url: session_path(:user), class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, class: "block text-gray-700 font-medium" %>
      <%= f.email_field :email, autofocus: true, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>

    <div>
      <%= f.label :password, class: "block text-gray-700 font-medium" %>
      <%= f.password_field :password, class: "w-full p-2 border border-gray-300 rounded mt-1" %>
    </div>

    <div class="flex justify-between items-center">
      <%= f.submit "Login", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
      <%= link_to "Forgot password?", new_password_path(:user), class: "text-sm text-gray-500 hover:underline" %>
    </div>
  <% end %>

  <div class="mt-4 text-center">
    Don't have an account?
    <%= link_to "Sign up", new_user_registration_path, class: "text-blue-500 hover:underline" %>
  </div>
</div>