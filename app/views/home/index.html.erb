<div class="flex flex-col items-center mt-10 px-6 md:flex-row md:justify-center">
  <div class="md:w-1/2 flex justify-center">
    <%= image_tag "geocodingapp.webp", alt: "Geocoding App", class: "rounded-lg shadow-md w-full max-w-sm" %>
  </div>

  <% if user_signed_in? %>
    <div class="md:w-1/2 mt-6 md:mt-0 md:ml-10 bg-white p-6 rounded-lg shadow-md">
      <h2 class="text-xl font-semibold text-gray-800">Your Address Information</h2>
      <p class="text-gray-600"><strong>Street:</strong> <%= current_user.street %></p>
      <p class="text-gray-600"><strong>City:</strong> <%= current_user.city %></p>
      <p class="text-gray-600"><strong>Zip Code:</strong> <%= current_user.zip %></p>
      <p class="text-gray-600"><strong>Latitude:</strong> <%= current_user.latitude %></p>
      <p class="text-gray-600"><strong>Longitude:</strong> <%= current_user.longitude %></p>
    </div>
  <% else %>
    <p class="text-center text-gray-700 mt-4">
      Please <%= link_to 'log in', new_user_session_path, class: "text-blue-500 hover:underline" %> to view your address details.
    </p>
  <% end %>
</div>
